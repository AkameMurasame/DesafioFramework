@{
    ViewData["Title"] = "Lista de Paises";
}

@model IEnumerable<DesafioFramework.Models.Dto.PaisDto>

<div class="row col-12">
    <div class="col-12">
        <a href="/pais/create">Novo Pais</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id Pais</th>
                <th scope="col">Nome Pais</th>
                <th scope="col">Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@Html.DisplayFor(modelItem => item.idPais)</th>
                    <td>  @Html.DisplayFor(modelItem => item.Descricao)</td>
                    <td>
                        <a href="/pais/@item.idPais" class="btn btn-primary"><i class="fa fa-eye"></i></a>
                        <a href="/pais/edit/@item.idPais" class="btn btn-success"><i class="fa fa-edit"></i></a>
                        <button type="button" onclick="deleteItem(@item.idPais)" class="btn btn-danger"><i class="fa fa-trash-alt"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function deleteItem(item) {
        fetch('/pais/delete/' + item, {
            method: 'DELETE',
        })
            .then(res => res.text()) // or res.json()
            .then(window.location.reload())
    }
</script>